<config prio_levels="2">

	<!--------------------->
	<!--  Default Route  -->
	<!--------------------->

	<parent-provides>
		<service name="ROM"/>
		<service name="RAM"/>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="CAP"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
		<service name="SIGNAL"/>
		<service name="Audio_out"/>
		<service name="Nic"/>
		<service name="Nitpicker"/>
		<service name="Timer"/>
	</parent-provides>
	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

	<start name="fade_fb">
		<resource name="RAM" quantum="4M"/>
		<provides>
			<service name="Framebuffer"/>
			<service name="Input"/>
		</provides>
		<config xpos="270" ypos="140" width="640" height="480" fade="yes"/>
	</start>

	<start name="rom_loopdev">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Block"/></provides>
		<config file="tinycore.img" block_size="512"/>
	</start>

	<start name="vmlinux" priority="-1">
		<resource name="RAM" quantum="256M"/>
		<route>
			<service name="Framebuffer"> <child name=""/> </service>
			<service name="Input">       <child name=""/> </service>
			<any-service> <parent/> <any-child/> </any-service>
		</route>
		<config>
			<commandline args="root=/dev/sda profile=seamless bkg=lx_background.png desktop=openbox noicons noswap norestore showapps nofstab base quiet"/>
			<initrd name="initrd.gz"/>
			<screens>
				<framebuffer/>
				<nitpicker/>
			</screens>
			<block/>
			<audio/>
			<!--<nic/>-->
		</config>
	</start>
</config>
